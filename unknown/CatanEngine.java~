import objectdraw.*;
import java.awt.*;
import java.util.Random;

public class CatanEngine extends WindowController
{
	
	
	public void begin()
	{
		Hand playerOne = new Hand(1);
		playerOne.addCard(new ResourceCard(1, canvas));
		playerOne.addCard(new ResourceCard(2, canvas));
		playerOne.addCard(new ResourceCard(1, canvas));
		playerOne.displayHand();
	}
	
	static public void main(String[] args)
	{
		new CatanEngine.startController(500, 500);
	}
}	
